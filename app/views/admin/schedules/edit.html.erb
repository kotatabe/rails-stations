<% provide(:title, 'Schedule Changes') %>
<%= render 'layouts/sideBar'%>
<div class="content">
	<%= render 'shared/flash' %>
	<div class="registration-form">
		<%= form_with model: [:admin, @schedule] do |f| %>
			<div class="block">
				<%= f.label :movie_id, "映画ID" %>
				<%= f.collection_select :movie_id, Screen.all, :id, :id, class: 'form-control' %>
			</div>
			<div class="block">
				<%= f.label :screen_id, "スクリーンID" %>
				<%= f.collection_select :screen_id, Screen.all, :id, :id, class: 'form-control' %>
			</div>
			<div class="block">
				<%= f.label :start_time, "開始時刻" %>
				<%= f.datetime_select :start_time, class: 'form-control', use_month_numbers: true %>
			</div>
			<div class="block">
				<%= f.label :end_time, "終了時刻" %>
				<%= f.datetime_select :end_time, class: 'form-control', use_month_numbers: true %>
			</div>
			<div class='submit'>
				<%= f.submit "Save", class: 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
</div>
