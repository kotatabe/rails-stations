<%= render 'layouts/sideBar'%>
<div class="content">
	<%= render 'shared/flash' %>
	<div class="registration-form">
		<h3>新規映画作品登録</h3>
		<%= form_with(model: [:admin, @movie]) do |form| %>
			<div class="block">
				<%= form.label :name, "タイトル" %>
				<%= form.text_field :name, class: 'form-control' %>
			</div>
			<div class="block">
				<%= form.label :year, "公開年" %>
				<%= form.text_field :year, class: 'form-control' %>
			</div>
			<div class="block">
				<%= form.label :is_showing, "上映中" %>
				<%= form.select :is_showing, [['上映中', 1], ['上映予定', 0]], {include_blank: '選択してください'}, class: 'form-control' %>
			</div>
			<div class="block">
				<%= form.label :description, "概要" %>
				<%= form.text_area :description, class: 'form-control' %>
			</div>
			<div class="block">
				<%= form.label :image_url , "画像URL" %>
				<%= form.text_field :image_url, class: 'form-control' %>
			</div>
			<div class='submit'>
				<%= form.submit "Save", class: 'btn-primary btn' %>
			</div>
		<% end %>
	</div>
</div>
