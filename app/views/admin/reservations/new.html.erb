<%= render 'layouts/sideBar'%>
<div class="content">
	<%= render 'shared/flash' %>
	<div class="registration-form">
		<h3>予約新規作成</h3>
		<%= form_with(model: [:admin, @reservation]) do |f| %>
			<div class="block">
				<%= f.label :schedule_id, "schedule_id" %>
				<%= f.collection_select :schedule_id, Schedule.all, :id, :id, class: 'form-control' %>
			</div>
			<div class="block">
				<%= f.label :sheet_id, "sheet_id" %>
				<%= f.collection_select :sheet_id, Sheet.all, :id, :id, class: 'form-control' %>
			</div>
			<div class="block">
				<%= f.label :date, "日付" %>
				<%= f.date_field :date, value: Date.today, class: 'form-control' %>
			</div>
			<div class="block">
				<%= f.label :name, "氏名" %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="block">
				<%= f.label :email, "メールアドレス" %>
				<%= f.text_field :email, class: 'form-control' %>
			</div>
			<div class='submit'>
				<%= f.submit "予約を作成する", class: 'btn-primary btn' %>
			</div>
		<% end %>
	</div>
</div>
